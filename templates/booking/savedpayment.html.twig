<form class="container">
	<div class="form-row">
		<div class="form-group col-6">
			<label for="savedPayments">Saved payment details for
				{{ (app.user.firstName ~ ' ' ~ app.user.lastName) }}</label>
			<select name="savedPaymentsSelection" id="savedPayments" class="form-control">
				<option value="-1">New</option>
				{% for savedPayment in app.user.savedPayments %}
					<option value={{ savedPayment.id }}>{{ savedPayment.name }}</option>
				{% endfor %}
			</select>
			<div id="savedPaymentsError"></div>
		</div>
		<div class="form-group col-3 form-row">
			<div class="form-group col-3">
				<label>&nbsp;</label><br>
				<img src="https://via.placeholder.com/60x60/FFFFFF/888888?text=â€¦" alt="loading icon" id="loadingIcon" class="d-none">
				<button id="loadPayment" type="button" class="d-none">Load</button>
			</div>
			<div class="form-group col-3">
				<label>&nbsp;</label><br>
				<button id="editPayment" type="button" class="d-none">Edit</button>
			</div>
			<div class="form-group col-3">
				<label>&nbsp;</label><br>
				<button id="resetForm" type="button" class="d-none">Reset</button>
			</div>
		</div>
	</div>
</form>
